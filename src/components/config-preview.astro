---
import TerminalWindow from './terminal-window.astro';

const configCode = `name: "my-app"
server: haloy.yourserver.com
domains:
  - domain: "my-app.com"
    aliases:
      - "www.my-app.com"
port: 3000
health_check_path: "/health"`;

const features = [
  { text: 'Automatic SSL/TLS certificates' },
  { text: 'Zero-downtime rolling deploys' },
  { text: 'Health checks & auto-recovery' },
  { text: 'www redirect handling' },
];
---

<section class="relative px-6 py-20">
  <div class="mx-auto max-w-6xl">
    <div class="grid items-center gap-12 lg:grid-cols-2 lg:gap-16">
      <!-- Left: Text content -->
      <div class="order-2 lg:order-1">
        <span class="config-label mb-4 inline-block rounded-full border border-amber-500/20 px-3.5 py-1.5 font-mono text-xs font-medium uppercase tracking-widest text-muted-foreground dark:border-amber-500/30">
          Configuration
        </span>
        <h2 class="mb-4 font-figtree text-3xl font-extrabold leading-tight tracking-tight text-foreground sm:text-4xl">
          One file. That's it.
        </h2>
        <p class="mb-8 text-lg leading-relaxed text-muted-foreground">
          No 200-line YAML manifests. No learning a new DSL. If you've used Docker, you already know how this works.
        </p>

        <ul class="space-y-4">
          {features.map((feature) => (
            <li class="flex items-center gap-3">
              <span class="flex size-6 shrink-0 items-center justify-center rounded-full bg-emerald-500/10 text-emerald-600 dark:bg-emerald-500/20 dark:text-emerald-400">
                <svg class="size-3.5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round">
                  <polyline points="20 6 9 17 4 12" />
                </svg>
              </span>
              <span class="text-foreground">{feature.text}</span>
            </li>
          ))}
        </ul>
      </div>

      <!-- Right: Code preview -->
      <div class="order-1 lg:order-2 lg:pt-10">
        <TerminalWindow title="haloy.yaml" icon="file">
          <pre class="overflow-x-auto p-4 font-mono text-sm leading-relaxed"><code class="text-gray-300">{configCode}</code></pre>
        </TerminalWindow>

        <!-- Deploy command hint -->
        <div class="mt-4 flex items-center justify-center gap-2 text-sm text-muted-foreground">
          <span>Then just run</span>
          <code class="rounded bg-black/5 px-2 py-0.5 font-mono text-xs dark:bg-white/10">haloy deploy</code>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .config-label {
    background: linear-gradient(135deg, rgba(245, 158, 11, 0.1), rgba(234, 88, 12, 0.1));
  }
  :global(.dark) .config-label {
    background: linear-gradient(135deg, rgba(245, 158, 11, 0.15), rgba(234, 88, 12, 0.15));
  }
</style>
