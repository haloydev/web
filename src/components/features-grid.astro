---
const features = [
  {
    title: 'LLM-Friendly',
    description:
      'Built for the AI era. CLI-first design means AI agents and coding assistants can deploy your apps without learning complex dashboards.',
    icon: 'sparkles',
    accent: 'emerald',
  },
  {
    title: 'Zero Downtime',
    description:
      'Rolling deployments keep your app running while new versions spin up. Traffic shifts seamlessly when health checks pass.',
    icon: 'refresh',
    accent: 'sky',
  },
  {
    title: 'Simple Config',
    description: 'One yaml file. If you know Docker, you already know 90% of what you need.',
    icon: 'file',
    accent: 'amber',
  },
  {
    title: 'No Lock-in',
    description: 'Your servers. Your containers. Your data. Move to any provider, whenever you want.',
    icon: 'unlock',
    accent: 'rose',
  },
  {
    title: 'Docker Native',
    description: 'If it runs in Docker, it runs on Haloy. No special adapters, no buildpacks, no surprises.',
    icon: 'container',
    accent: 'violet',
  },
  {
    title: 'Instant Rollbacks',
    description: 'Something wrong? One command reverts to the previous version. Your users never notice.',
    icon: 'rewind',
    accent: 'cyan',
  },
];
---

<section class="relative px-6 py-20">
  <div class="mx-auto max-w-7xl">
    <!-- Header -->
    <div class="mb-16 text-center">
      <span class="features-label mb-4 inline-block rounded-full border border-emerald-500/20 px-3.5 py-1.5 font-mono text-xs font-medium uppercase tracking-widest text-muted-foreground dark:border-emerald-500/30">
        Why Haloy
      </span>
      <h2 class="mb-4 font-figtree text-3xl font-extrabold leading-tight tracking-tight text-foreground sm:text-4xl lg:text-5xl">
        The deploy tool that gets out of your way
      </h2>
      <p class="mx-auto max-w-xl text-lg leading-relaxed text-muted-foreground">
        Like docker compose, but for production.
      </p>
    </div>

    <!-- Grid -->
    <div class="grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-3">
      {
        features.map((feature, index) => (
          <article
            class={`feature-card feature-card--${feature.accent} group relative overflow-hidden rounded-2xl border border-black/[0.06] bg-white/60 p-7 backdrop-blur-sm transition-all duration-300 ease-out hover:-translate-y-1 hover:border-black/10 hover:shadow-[0_20px_40px_-12px_rgba(0,0,0,0.1),0_8px_16px_-8px_rgba(0,0,0,0.06)] dark:border-white/[0.06] dark:bg-white/[0.03] dark:hover:border-white/10 dark:hover:shadow-[0_20px_40px_-12px_rgba(0,0,0,0.4),0_8px_16px_-8px_rgba(0,0,0,0.3)]`}
            style={`--delay: ${index * 0.08}s`}
          >
            <div class="feature-icon-wrapper mb-4 flex size-11 items-center justify-center rounded-xl transition-transform duration-300 group-hover:scale-110">
              {feature.icon === 'sparkles' && (
                <svg class="size-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M12 3l1.912 5.813a2 2 0 001.275 1.275L21 12l-5.813 1.912a2 2 0 00-1.275 1.275L12 21l-1.912-5.813a2 2 0 00-1.275-1.275L3 12l5.813-1.912a2 2 0 001.275-1.275L12 3z" />
                  <path d="M5 3v4M3 5h4M19 17v4M17 19h4" />
                </svg>
              )}
              {feature.icon === 'refresh' && (
                <svg class="size-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M21 12a9 9 0 11-9-9c2.52 0 4.93 1 6.74 2.74L21 8" />
                  <path d="M21 3v5h-5" />
                </svg>
              )}
              {feature.icon === 'file' && (
                <svg class="size-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M14 2H6a2 2 0 00-2 2v16a2 2 0 002 2h12a2 2 0 002-2V8z" />
                  <polyline points="14 2 14 8 20 8" />
                  <line x1="16" y1="13" x2="8" y2="13" />
                  <line x1="16" y1="17" x2="8" y2="17" />
                  <line x1="10" y1="9" x2="8" y2="9" />
                </svg>
              )}
              {feature.icon === 'unlock' && (
                <svg class="size-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                  <rect x="3" y="11" width="18" height="11" rx="2" ry="2" />
                  <path d="M7 11V7a5 5 0 019.9-1" />
                </svg>
              )}
              {feature.icon === 'container' && (
                <svg class="size-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M21 16V8a2 2 0 00-1-1.73l-7-4a2 2 0 00-2 0l-7 4A2 2 0 003 8v8a2 2 0 001 1.73l7 4a2 2 0 002 0l7-4A2 2 0 0021 16z" />
                  <polyline points="3.27 6.96 12 12.01 20.73 6.96" />
                  <line x1="12" y1="22.08" x2="12" y2="12" />
                </svg>
              )}
              {feature.icon === 'rewind' && (
                <svg class="size-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                  <polygon points="11 19 2 12 11 5 11 19" />
                  <polygon points="22 19 13 12 22 5 22 19" />
                </svg>
              )}
            </div>
            <h3 class="mb-2 font-figtree text-lg font-bold tracking-tight text-foreground">
              {feature.title}
            </h3>
            <p class="text-[0.9375rem] leading-relaxed text-muted-foreground">
              {feature.description}
            </p>
            <div class="feature-glow absolute left-0 right-0 top-0 h-px opacity-0 transition-opacity duration-300 group-hover:opacity-100" />
          </article>
        ))
      }
    </div>
  </div>
</section>

<style>
  /* Entrance animation */
  .feature-card {
    animation: feature-appear 0.6s cubic-bezier(0.4, 0, 0.2, 1) forwards;
    animation-delay: var(--delay);
    opacity: 0;
    transform: translateY(20px);
  }

  @keyframes feature-appear {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Label gradient */
  .features-label {
    background: linear-gradient(135deg, rgba(16, 185, 129, 0.1), rgba(6, 182, 212, 0.1));
  }
  :global(.dark) .features-label {
    background: linear-gradient(135deg, rgba(16, 185, 129, 0.15), rgba(6, 182, 212, 0.15));
  }

  /* Accent colors - Icon wrappers */
  .feature-card--emerald .feature-icon-wrapper {
    background: linear-gradient(135deg, rgba(16, 185, 129, 0.15), rgba(16, 185, 129, 0.05));
    color: #10b981;
  }
  .feature-card--sky .feature-icon-wrapper {
    background: linear-gradient(135deg, rgba(14, 165, 233, 0.15), rgba(14, 165, 233, 0.05));
    color: #0ea5e9;
  }
  .feature-card--amber .feature-icon-wrapper {
    background: linear-gradient(135deg, rgba(245, 158, 11, 0.15), rgba(245, 158, 11, 0.05));
    color: #f59e0b;
  }
  .feature-card--rose .feature-icon-wrapper {
    background: linear-gradient(135deg, rgba(244, 63, 94, 0.15), rgba(244, 63, 94, 0.05));
    color: #f43f5e;
  }
  .feature-card--violet .feature-icon-wrapper {
    background: linear-gradient(135deg, rgba(139, 92, 246, 0.15), rgba(139, 92, 246, 0.05));
    color: #8b5cf6;
  }
  .feature-card--cyan .feature-icon-wrapper {
    background: linear-gradient(135deg, rgba(6, 182, 212, 0.15), rgba(6, 182, 212, 0.05));
    color: #06b6d4;
  }

  /* Dark mode icon wrappers */
  :global(.dark) .feature-card--emerald .feature-icon-wrapper {
    background: linear-gradient(135deg, rgba(16, 185, 129, 0.2), rgba(16, 185, 129, 0.08));
  }
  :global(.dark) .feature-card--sky .feature-icon-wrapper {
    background: linear-gradient(135deg, rgba(14, 165, 233, 0.2), rgba(14, 165, 233, 0.08));
  }
  :global(.dark) .feature-card--amber .feature-icon-wrapper {
    background: linear-gradient(135deg, rgba(245, 158, 11, 0.2), rgba(245, 158, 11, 0.08));
  }
  :global(.dark) .feature-card--rose .feature-icon-wrapper {
    background: linear-gradient(135deg, rgba(244, 63, 94, 0.2), rgba(244, 63, 94, 0.08));
  }
  :global(.dark) .feature-card--violet .feature-icon-wrapper {
    background: linear-gradient(135deg, rgba(139, 92, 246, 0.2), rgba(139, 92, 246, 0.08));
  }
  :global(.dark) .feature-card--cyan .feature-icon-wrapper {
    background: linear-gradient(135deg, rgba(6, 182, 212, 0.2), rgba(6, 182, 212, 0.08));
  }

  /* Accent colors - Glow bars */
  .feature-card--emerald .feature-glow {
    background: linear-gradient(90deg, transparent, #10b981, transparent);
  }
  .feature-card--sky .feature-glow {
    background: linear-gradient(90deg, transparent, #0ea5e9, transparent);
  }
  .feature-card--amber .feature-glow {
    background: linear-gradient(90deg, transparent, #f59e0b, transparent);
  }
  .feature-card--rose .feature-glow {
    background: linear-gradient(90deg, transparent, #f43f5e, transparent);
  }
  .feature-card--violet .feature-glow {
    background: linear-gradient(90deg, transparent, #8b5cf6, transparent);
  }
  .feature-card--cyan .feature-glow {
    background: linear-gradient(90deg, transparent, #06b6d4, transparent);
  }
</style>
