---
import Code from '@/components/code.astro';
import CodeTabs from '@/components/code-tabs/code-tabs.astro';
import CodeTabTrigger from '@/components/code-tabs/code-tab-trigger.astro';
import CodeTabPanel from '@/components/code-tabs/code-tab-panel.astro';
---

<CodeTabs defaultValue="curl">
  <Fragment slot="tabs">
    <CodeTabTrigger value="curl">curl</CodeTabTrigger>
    <CodeTabTrigger value="homebrew">homebrew</CodeTabTrigger>
    <CodeTabTrigger value="npm">npm</CodeTabTrigger>
    <CodeTabTrigger value="pnpm">pnpm</CodeTabTrigger>
    <CodeTabTrigger value="bun">bun</CodeTabTrigger>
  </Fragment>

  <CodeTabPanel value="curl">
    <Code code="curl -fsSL https://sh.haloy.dev/install-haloy.sh | sh" lang="bash" />
  </CodeTabPanel>

  <CodeTabPanel value="homebrew">
    <Code code="brew install haloydev/tap/haloy" lang="bash" />
  </CodeTabPanel>

  <CodeTabPanel value="npm">
    <Code code="npm i -g haloy" lang="bash" />
  </CodeTabPanel>

  <CodeTabPanel value="pnpm">
    <Code code="pnpm add -g haloy" lang="bash" />
  </CodeTabPanel>

  <CodeTabPanel value="bun">
    <Code code="bun add -g haloy" lang="bash" />
  </CodeTabPanel>
</CodeTabs>
