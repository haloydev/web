---
import '../styles/global.css';
import '@fontsource-variable/inter';
import '@fontsource-variable/figtree';
import { cn } from '@/lib/utils';

interface Props {
  title: string;
  class?: string;
}

const { title, class: className } = Astro.props;
---

<script is:inline>
  const getThemePreference = () => {
    if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
      const stored = localStorage.getItem('theme');
      if (stored === 'light') return 'light';
      if (stored === 'dark') return 'dark';
      if (stored === 'system') {
        return window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
      }
    }
    return window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
  };
  const isDark = getThemePreference() === 'dark';
  document.documentElement.classList[isDark ? 'add' : 'remove']('dark');

  if (typeof localStorage !== 'undefined') {
    // Listen for system theme changes when preference is 'system'
    const updateSystemTheme = () => {
      const stored = localStorage.getItem('theme');
      if (stored === 'system') {
        const isDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
        document.documentElement.classList[isDark ? 'add' : 'remove']('dark');
      }
    };

    const mediaQuery = window.matchMedia('(prefers-color-scheme: dark)');
    mediaQuery.addEventListener('change', updateSystemTheme);
  }
</script>

<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta
      name="description"
      content="Haloy is a lightweight deployment and orchestration system designed for developers who want a simple, reliable way to deploy Dockerâ€‘based applications to their own servers"
    />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body class={cn('min-h-screen bg-background font-sans text-foreground antialiased', className)}>
    <slot />
  </body>
</html>
