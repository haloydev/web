---
import BaseLayout from '@/layouts/base.astro';
import { Navbar } from '@/components/navbar';
---

<BaseLayout title="Haloy - Page not found">
  <div class="flex min-h-screen flex-col">
    <Navbar client:load />
    <div class="flex justify-center">
      <div class="mt-32">
        <h1 class="text-muted-foreground/20 text-center text-8xl font-bold sm:text-left">404</h1>
        <h2 class="text-center text-3xl font-semibold sm:text-left sm:text-5xl">Page Not Found</h2>
        <p class="text-muted-foreground mt-2 mb-8 text-center text-lg sm:text-left">
          The page you're looking for doesn't exist or has been moved.
        </p>
      </div>
    </div>
  </div>
</BaseLayout>
