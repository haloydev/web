---
import { getCollection, render } from 'astro:content';
import DocsLayout from '@/layouts/docs.astro';

export async function getStaticPaths() {
  const pages = await getCollection('docPages');
  return pages.map((page) => ({
    params: { slug: page.data.slug },
    props: { page },
  }));
}
const { page } = Astro.props;
const { Content, headings } = await render(page);
---

<DocsLayout title={page.data.title} description={page.data.description} activeSlug={page.data.slug} headings={headings}>
  <Content />
</DocsLayout>

<meta name="page-slug" content={page.data.slug} />
