---
import { Image } from 'astro:assets';
import BaseLayout from '@/layouts/base.astro';
import pinkBurst from '../assets/pink-burst.svg';
import blueBurst from '../assets/blue-burst.svg';
import { CurlewLogo } from '@/components/curlew-logo';
import { ButtonLink } from '@/components/ui/button-link';
import { IconRocket } from '@tabler/icons-react';
import { Navbar } from '@/components/navbar';
---

<BaseLayout title="Haloy - Deploy Anywhere" class="bg-background-sky">
  <div class="relative">
    <div class="absolute inset-0 dark:hidden">
      <Image src={pinkBurst} alt="" class="absolute -top-32 left-[10%] w-200" />
      <Image src={pinkBurst} alt="" class="absolute -top-40 left-[40%] w-200" />
      <Image src={pinkBurst} alt="" class="absolute -top-12 left-[27%] w-80" />
      <Image src={pinkBurst} alt="" class="absolute -top-8 left-[30%] w-160" />
      <Image src={pinkBurst} alt="" class="absolute -top-16 left-[15%] w-80" />
      <Image src={blueBurst} alt="" class="absolute -top-24 left-[70%] w-140" />
    </div>

    <div class="relative h-screen">
      <Navbar client:load />
      <div class="flex justify-center">
        <div class="mt-20 max-w-4xl px-12 sm:mt-32">
          <h1 class="relative inline-block">
            <CurlewLogo className="absolute -top-12 w-12 sm:-right-8" />
            <span class="font-figtree text-left text-4xl font-black sm:text-6xl"> Cloudless Deploys </span>
          </h1>
          <p class="mt-3 max-w-2xl text-xl sm:leading-10 md:text-2xl">Manage deployments on your own infrastructure.</p>
          <div class="mt-6">
            <ButtonLink href="/docs/quickstart" size="lg">
              <IconRocket />
              Quickstart
            </ButtonLink>
            <ButtonLink href="/docs" size="lg" variant="link"> Documentation </ButtonLink>
          </div>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>
